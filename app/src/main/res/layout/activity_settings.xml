<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SettingsActivity">

    <!--Toolbar-->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_white"
            android:layout_alignParentStart="true"
            android:background="@null"/>

        <com.blogspot.atifsoftwares.circularimageview.CircularImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/profileIv"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            app:c_border="true"
            app:c_border_color="@color/colorWhite"
            android:src="@drawable/ic_store_gray"/>

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toStartOf="@+id/profileIv"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"/>


        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_toStartOf="@+id/profileIv"
            android:layout_below="@+id/nameTv"
            android:textColor="@color/colorWhite"/>

        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_toStartOf="@+id/profileIv"
            android:layout_below="@+id/emailTv"
            android:textColor="@color/colorWhite"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Background Color:"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1:"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/option1Iv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/shape_rect01"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2:"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/option2Iv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/shape_rect_option2"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3:"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/option3Iv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/shape_rect_option3"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 4:"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/option4Iv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/shape_rect_option4"/>
    </LinearLayout>

</RelativeLayout>