        <item name="colorAccent">@color/colorAccentOption3</item>
    </style>

    <!-- Option2 application theme. -->
    <style name="Theme.GroceryApp.Option4" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryOption4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOption4</item>
        <item name="colorAccent">@color/colorAccentOption4</item>
    </style>

</resources>