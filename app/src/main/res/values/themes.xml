<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GroceryApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Theme without actionbar-->
    <style name="Theme.GroceryApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.GroceryApp.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GroceryApp.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GroceryApp.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Option2 application theme. -->
    <style name="Theme.GroceryApp.Option2" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryOption2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOption2</item>
        <item name="colorAccent">@color/colorAccentOption2</item>
    </style>

    <!-- Option2 application theme. -->
    <style name="Theme.GroceryApp.Option3" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
